@model VehicleLeasingManager.Models.Vehicle

@{
    ViewBag.Title = "Delete Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Vehicle</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Branch.BranchName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Branch.BranchName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Client.CompanyName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Client.CompanyName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Driver.FullName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Driver.FullName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Supplier.SupplierName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Supplier.SupplierName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Manufacturer)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Manufacturer)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Model)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Model)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Year)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Year)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegistrationNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RegistrationNumber)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger me-2" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
