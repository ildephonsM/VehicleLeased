@model IEnumerable<VehicleLeasingManager.Models.Vehicle>

@{
    ViewBag.Title = "Vehicles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Vehicles</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</div>

<table class="table table-hover table-bordered bg-white shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Branch.BranchName)</th>
            <th>@Html.DisplayNameFor(model => model.Client.CompanyName)</th>
            <th>@Html.DisplayNameFor(model => model.Driver.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Supplier.SupplierName)</th>
            <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
            <th>@Html.DisplayNameFor(model => model.Model)</th>
            <th>@Html.DisplayNameFor(model => model.Year)</th>
            <th>@Html.DisplayNameFor(model => model.RegistrationNumber)</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Branch.BranchName)</td>
                <td>@Html.DisplayFor(modelItem => item.Client.CompanyName)</td>
                <td>@Html.DisplayFor(modelItem => item.Driver.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Supplier.SupplierName)</td>
                <td>@Html.DisplayFor(modelItem => item.Manufacturer)</td>
                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationNumber)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Edit", new { id = item.VehicleId })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Details", new { id = item.VehicleId })" class="btn btn-sm btn-info">Details</a>
                        <a href="@Url.Action("Delete", new { id = item.VehicleId })" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
