@model IEnumerable<VehicleLeasingManager.Models.Driver>

@{
    ViewBag.Title = "Drivers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Drivers</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</div>

<table class="table table-hover table-bordered bg-white shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.LicenseNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.LicenseNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Edit", new { id = item.DriverId })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Details", new { id = item.DriverId })" class="btn btn-sm btn-info">Details</a>
                        <a href="@Url.Action("Delete", new { id = item.DriverId })" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
