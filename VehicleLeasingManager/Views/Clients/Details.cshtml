@model VehicleLeasingManager.Models.Client

@{
    ViewBag.Title = "Client Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Client Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CompanyName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CompanyName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ContactDetails)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactDetails)</dd>
            </dl>

            <div class="mt-4">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ClientId }, new { @class = "btn btn-warning me-2" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
