@model VehicleLeasingManager.Models.SummaryReport

@{
    ViewBag.Title = "Summary Report";
}

<h2>Summary Report</h2>

<h3>Vehicles per Supplier and Manufacturer</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Supplier</th>
            <th>Manufacturer</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stat in Model.SupplierStats)
        {
            <tr class="@(stat.Manufacturer == "TOTAL" ? "table-success font-weight-bold" : "")">
                <td>@stat.Supplier</td>
                <td>@stat.Manufacturer</td>
                <td>@stat.Count</td>
            </tr>
        }
    </tbody>
</table>

