@model VehicleLeasingManager.Models.Branch

@{
    ViewBag.Title = "Branch Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; // adjust if needed
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Branch Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BranchName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BranchName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Location)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>
            </dl>

            <div class="mt-4">
                @Html.ActionLink("Edit", "Edit", new { id = Model.BranchId }, new { @class = "btn btn-warning me-2" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
